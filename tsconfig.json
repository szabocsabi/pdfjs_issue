{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "outDir": "build",
    "target": "es5",
    "lib": [
      "DOM",
      "ES5",
      "ScriptHost",
      "ES2015.Symbol",
      "ES6"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}
